<Page navigatingTo="onNavigatingTo" class="page"
    xmlns="http://schemas.nativescript.org/tns.xsd" >

    <ActionBar title="Timed Whack">
        <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="navigateToHome"></NavigationButton>
        <ActionItem ios.systemIcon="18" android.systemIcon="ic_media_pause" 
            ios.position="right" tap="pauseGame">
        </ActionItem>
    </ActionBar>

    <StackLayout rows="*, auto" width="100%" loaded="fieldLoaded">

        <AbsoluteLayout row="0" width="100%" height="9%" backgroundColor="black">
            <button id="whatToPick" class="whatToPickShape" width="60" height="60" 
                backgroundColor="#3d3d3d" style="border-bottom-color: red" verticalAlignment="center"></button>        
        </AbsoluteLayout>
        
        <AbsoluteLayout row="1" orentation="vertical" height="91%" backgroundColor="#3d3d3d" id="gameField">

            <button id="circle" tap="circleClick" width="100" height="100" backgroundColor="red" visibility="collapsed"/>
            <button id="square" tap="squareClick" width="100" height="100" backgroundColor="green" visibility="collapsed"/>
            <button id="triangle" tap="triangleClick" width="100" height="100" backgroundColor="yellow" visibility="collapsed"/>
        </AbsoluteLayout>
    </StackLayout>
</Page>
